import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

public class PetTableTest {
    public static void main(String[] args) {
        // Установка пути к драйверу Chrome
        System.setProperty("webdriver.chrome.driver", "путь_к_драйверу");

        // Создание экземпляра ChromeDriver
        WebDriver driver = new ChromeDriver();

        // Открытие страницы с таблицей питомцев
        driver.get("https://example.com/pet-table");

        // Инициализация объекта WebDriverWait
        WebDriverWait wait = new WebDriverWait(driver, 10);

        // Явное ожидание появления заголовка таблицы
        WebElement tableTitle = wait.until(ExpectedConditions.visibilityOfElementLocated(By.cssSelector(".table-title")));

        // Явное ожидание загрузки всех строк таблицы
        wait.until(ExpectedConditions.presenceOfAllElementsLocatedBy(By.cssSelector(".table-row")));

        // Закрытие браузера
        driver.quit();
    }
}
